<resources>

    <!-- Base app theme -->
    <style name="Theme.AttendanceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color of the app -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color of the app -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and text colors -->
        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <!-- Simple AppText style -->
    <style name="AppText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Simple AppButton style -->
    <style name="AppButton">
        <item name="android:backgroundTint">#6200EE</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- Base Widget.App style (used as parent) -->
    <style name="Widget.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <!-- EditText custom style -->
    <style name="Widget.App.EditText" parent="Widget.App">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <!-- Button primary style -->
    <style name="Widget.App.Button.Primary" parent="Widget.App">
        <item name="android:backgroundTint">#6200EE</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Button secondary style -->
    <style name="Widget.App.Button.Secondary" parent="Widget.App">
        <item name="android:backgroundTint">#03DAC5</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Base text appearance -->
    <style name="Widget.TextAppearance.App" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Headline text -->
    <style name="Widget.TextAppearance.App.Headline" parent="Widget.TextAppearance.App">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body text -->
    <style name="Widget.TextAppearance.App.Body" parent="Widget.TextAppearance.App">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
